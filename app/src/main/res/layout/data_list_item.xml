<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_data_item_type"
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:background="@drawable/item_avatar"
            android:text="信息"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_data_item_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/item_avatar"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_data_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="信息"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_black"
            android:layout_toRightOf="@id/tv_data_item_type"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/tv_data_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="你好－哈哈"
            android:textSize="14sp"
            android:layout_alignLeft="@id/tv_data_item_title"
            android:layout_below="@id/tv_data_item_title"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/tv_data_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:30"
            android:textSize="10sp"
            android:layout_alignLeft="@id/tv_data_item_subtitle"
            android:layout_below="@id/tv_data_item_subtitle"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>