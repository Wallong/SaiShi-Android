<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_notice"/>
            <TextView
                android:id="@+id/nav_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@color/item_color"
                android:text="通知"
                android:textSize="16sp"
                android:textColor="#FF000000"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_explore"/>
            <TextView
                android:id="@+id/nav_explore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@color/item_color"
                android:text="动态"
                android:textSize="16sp"
                android:textColor="#FF000000"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_schedule"/>
            <TextView
                android:id="@+id/nav_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@color/item_color"
                android:text="日程"
                android:textSize="16sp"
                android:textColor="#FF000000"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_file"/>
            <TextView
                android:id="@+id/nav_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@color/item_color"
                android:text="文件"
                android:textSize="16sp"
                android:textColor="#FF000000"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_conference"/>
            <TextView
                android:id="@+id/nav_conference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@color/item_color"
                android:text="会务"
                android:textSize="16sp"
                android:textColor="#FF000000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"/>
            <TextView
                android:id="@+id/nav_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@color/item_color"
                android:text="设置"
                android:textSize="16sp"
                android:textColor="#FF000000"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>